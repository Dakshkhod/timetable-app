{
  "name": "smart-timetable-app",
  "version": "1.0.0",
  "description": "A comprehensive Smart Timetable App for college students with AI-powered features",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "test-server": "node server/test-server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "seed": "node server/scripts/seedTimetables.js",
    "test": "jest",
    "test:security": "jest --testPathPattern=security",
    "audit": "npm audit && cd client && npm audit",
    "audit:fix": "npm audit fix && cd client && npm audit fix",
    "security:scan": "npx audit-ci --config .audit-ci.json",
    "lint": "eslint server/ --ext .js",
    "lint:fix": "eslint server/ --ext .js --fix",
    "docker:build": "docker build -t smart-timetable .",
    "docker:scan": "docker scout cves smart-timetable || trivy image smart-timetable",
    "prod:start": "NODE_ENV=production node server/index.js"
  },
  "keywords": ["timetable", "college", "productivity", "ai", "education"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.3",
    "googleapis": "^128.0.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "node-fetch": "^3.3.2",
    "express-validator": "^7.0.1",
    "zod": "^3.22.4",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "@sentry/node": "^7.84.0",
    "csurf": "^1.11.0",
    "express-brute": "^1.0.1",
    "express-brute-mongo": "^1.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.1",
    "audit-ci": "^6.6.1",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
} 